<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4DDF8"
    tools:context=".WeatherFragment">

    <TextView
        android:id="@+id/precipitaitionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precepitation"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="170dp" />

    <TextView
        android:id="@+id/currentWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/windSD"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/cityChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DCE775"
        android:text="@string/choose_city"
        android:textSize="18sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="411dp" />

    <TextView
        android:id="@+id/precepitationData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precepitationInfo"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="170dp" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15.2Â°C"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="499dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/windTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saint_petersburg"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="274dp" />

    <TextView
        android:id="@+id/sunsetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sunsetTime"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="379dp"
        tools:layout_editor_absoluteY="138dp" />

    <ImageView
        android:id="@+id/weatherImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/browserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFD54F"
        android:text="@string/forecast"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="317dp" />

    <TextView
        android:id="@+id/sunriseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sunriseTime"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sunset_time"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/temperatureLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/weatherImg"
        tools:layout_editor_absoluteY="32dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#AED581"
        android:text="@string/settings"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="363dp" />

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sunrise_time"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="105dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>